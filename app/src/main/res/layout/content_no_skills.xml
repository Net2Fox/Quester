<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noInternetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/no_skills_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_warning_24" />

                <TextView
                    android:id="@+id/no_skills_heading"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/no_skills_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/no_skills_header"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/no_skills_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_skills_heading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="64dp"
                    android:layout_marginVertical="12dp"
                    android:gravity="center"
                    android:text="@string/no_skills_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </RelativeLayout>

</RelativeLayout>
